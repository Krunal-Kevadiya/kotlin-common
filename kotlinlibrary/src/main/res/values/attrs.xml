<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Snack Bar -->
    <declare-styleable name="SbProgress">
        <attr name="sbp_progressIndeterminate" format="boolean" />
        <attr name="sbp_barColor" format="color" />
        <attr name="sbp_rimColor" format="color" />
        <attr name="sbp_rimWidth" format="dimension" />
        <attr name="sbp_spinSpeed" format="float" />
        <attr name="sbp_barSpinCycleTime" format="integer" />
        <attr name="sbp_circleRadius" format="dimension" />
        <attr name="sbp_fillRadius" format="boolean" />
        <attr name="sbp_barWidth" format="dimension" />
        <attr name="sbp_linearProgress" format="boolean" />
    </declare-styleable>

    <!-- Rounded Button with ProgressBar -->
    <declare-styleable name="RoundButton">
        <attr name="rb_animation_duration" format="integer" />
        <attr name="rb_animation_corner_radius" format="dimension" />
        <attr name="rb_animation_alpha" format="boolean" />
        <attr name="rb_animation_progress_color" format="color" />
        <attr name="rb_animation_progress_padding" format="dimension" />
        <attr name="rb_animation_progress_width" format="dimension" />
        <attr name="rb_animation_progress_style" format="enum">
            <enum name="circle" value="0" />
            <enum name="dots" value="1" />
            <enum name="custom" value="2" />
        </attr>
        <attr name="rb_animation_custom_resource" format="reference" />
        <attr name="rb_animation_inner_resource" format="reference" />
        <attr name="rb_animation_inner_resource_color" format="color" />

        <attr name="rb_drawable_color" format="color" />
        <attr name="rb_drawable_resource" format="reference" />
        <attr name="rb_success_color" format="color" />
        <attr name="rb_success_resource" format="reference" />
        <attr name="rb_failure_color" format="color" />
        <attr name="rb_failure_resource" format="reference" />

        <attr name="rb_corner_radius" format="dimension" />
        <attr name="rb_corner_width" format="dimension" />
        <attr name="rb_corner_color" format="color" />
        <attr name="rb_corner_color_pressed" format="color" />
        <attr name="rb_corner_color_disabled" format="color" />

        <attr name="rb_background_color" format="color" />
        <attr name="rb_background_color_pressed" format="color" />
        <attr name="rb_background_color_disabled" format="color" />
        <attr name="rb_text_color" format="color" />
        <attr name="rb_text_color_pressed" format="color" />
        <attr name="rb_text_color_disabled" format="color" />

        <attr name="rb_padding" format="dimension"/>
        <attr name="rb_padding_top" format="dimension"/>
        <attr name="rb_padding_left" format="dimension"/>
        <attr name="rb_padding_right" format="dimension"/>
        <attr name="rb_padding_bottom" format="dimension"/>

        <attr name="rb_shadow_margin" format="dimension"/>
        <attr name="rb_shadow_margin_top" format="dimension"/>
        <attr name="rb_shadow_margin_left" format="dimension"/>
        <attr name="rb_shadow_margin_right" format="dimension"/>
        <attr name="rb_shadow_margin_bottom" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="pb_gradient_angle" format="integer|reference"/>
        <attr name="pb_gradient_colors" format="color|reference"/>
        <attr name="pb_gradient_positions" format="string|reference"/>
        <attr name="pb_normal_color" format="color|reference"/>
        <attr name="pb_corner_topLeftRadius" format="integer|reference"/>
        <attr name="pb_corner_topRightRadius" format="integer|reference"/>
        <attr name="pb_corner_bottomLeftRadius" format="integer|reference"/>
        <attr name="pb_corner_bottomRightRadius" format="integer|reference"/>
        <attr name="pb_state_success_backgroundColor" format="color|reference"/>
        <attr name="pb_state_success_drawable" format="reference"/>
        <attr name="pb_state_success_drawableTint" format="color|reference"/>
        <attr name="pb_state_failure_backgroundColor" format="color|reference"/>
        <attr name="pb_state_failure_drawable" format="reference"/>
        <attr name="pb_state_failure_drawableTint" format="color|reference"/>
        <attr name="pb_image_drawable" format="reference"/>
        <attr name="pb_image_drawableTint" format="color|reference"/>
        <attr name="pb_anim_duration" format="integer|reference"/>
        <attr name="pb_anim_corner_radius" format="integer|reference"/>
        <attr name="pb_anim_alpha_morphing" format="boolean|reference"/>
        <attr name="pb_progress_style" format="enum">
            <enum name="circle" value="0" />
            <enum name="dots" value="1" />
            <enum name="custom" value="2" />
        </attr>
        <attr name="pb_progress_color" format="color|reference"/>
        <attr name="pb_button_style" format="enum">
            <enum name="oval" value="0" />
            <enum name="rect" value="1" />
            <enum name="roundedRect" value="2" />
            <enum name="circle" value="3" />
            <enum name="undefined" value="4" />
        </attr>
        <attr name="pb_stroke_width" format="integer|reference"/>
        <attr name="pb_stroke_color" format="color|reference"/>
        <attr name="pb_state_with_stroke" format="boolean|reference"/>
        <attr name="pb_state_with_revert" format="boolean|reference"/>
        <attr name="pb_state_revert_duration" format="integer|reference"/>
        <attr name="pb_button_shape" format="enum">
            <enum name="solid" value="0" />
            <enum name="stroke" value="1" />
            <enum name="both" value="2" />
        </attr>
        <attr name="pb_progress_dots_count" format="integer|reference"/>
    </declare-styleable>

    <!-- Layout -->
    <declare-styleable name="AspectRatioLayout">
        <attr name="width_ratio" format="integer" />
        <attr name="height_ratio" format="integer" />
    </declare-styleable>

    <!-- Skeleton Layout -->
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference"/>
        <attr name="shimmer_animation_duration" format="integer|reference"/>
        <attr name="shimmer_auto_start" format="boolean|reference"/>
        <attr name="shimmer_angle" format="integer|reference"/>
        <attr name="shimmer_mask_width" format="float|reference"/>
        <attr name="shimmer_gradient_center_color_width" format="float|reference"/>
        <attr name="shimmer_reverse_animation" format="boolean|reference"/>
    </declare-styleable>
</resources>