<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Snack Bar -->
    <style name="SbTitleTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="SbMessageStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SbButtonTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="SbButtonStyle">
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:background">@drawable/sb_btn_bg_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SbCircularIndeterminateProgressStyle">
        <item name="sbp_barColor">@android:color/white</item>
        <item name="sbp_barWidth">@dimen/_2sdp</item>
        <item name="sbp_progressIndeterminate">true</item>
    </style>

    <!-- Dialog -->
    <style name="ThemeDialog_AppTheme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- RecyclerView LoadMore -->
    <style name="RepeatButtonStyle">
        <item name="android:textColor">@color/loadmore_error_background</item>
        <item name="android:text">@string/loadmore_network_error_button</item>
    </style>
</resources>